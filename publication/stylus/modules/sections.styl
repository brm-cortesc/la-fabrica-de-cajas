.description
	path("bg-desc.jpg")
	background-repeat no-repeat
	background-position top center
	background-size 100%
	min-height 29em
	
	h2
		color #fff
		font-family Roboto
		font-size 1.7em
		margin-left 5.4em
		margin-top 2em
		text-shadow 0px 0px 5px rgba(0, 0, 0, .25)
		


.herramientas-login
	box-shadow inset 0px 0px 10px 3px rgba(0, 0, 0, .25)
	padding 2.5em 0
	
	h2
		color Verde
		font-family Roboto
		font-size 1.5em
		font-weight Light
		width 50%
		text-align center
		margin 1em auto
		

	.lista-herramientas
		list-style-type none
		width 70%
		margin 0 auto
		
		li
			// list-style-type none
			display inline-block
			margin-left 0.5em
			margin-right @margin-left
			transition all ease-in-out 0.3s
			
			&:hover
				transform translateY(-1em)